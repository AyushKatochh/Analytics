<%- include('partials/header') %>

<div class="container mt-5">
  <!-- Makes POST request to /login route -->
  <div class="form-1">
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="email"><h1>Email</h1></label>
        <input type="email" class="form-control" name="username" />
      </div>
      <div class="form-group">
        <label for="password"><h1>Password</h1></label>
        <input type="password" class="form-control" name="password" />
      </div>
      <button type="submit" class="button1 btn btn-dark">Login</button>
    </form>
  </div>
</div>

<section class="v2">
  <div>
    <i class="fas fa-address-book fa-4x"></i>
    <div class="counter count3">
      <h1 class="location"></h1>
      <h1><%= loginPageCounter %></h1>
    </div>
    <h3>Page Views</h3>
  </div>
</section>

<script>
  const homePageViews = document.querySelector(".location");
  homePageViews.innerHTML = `<h1> The location of this page is  ${window.location.pathname}</h1>`;
</script>
<%- include('partials/footer') %>
